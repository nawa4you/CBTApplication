@model IEnumerable<CBTApplication.Models.Test>

@{
    ViewData["Title"] = "Manage Tests";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="display-6 mb-0">Manage Tests</h2>
            <a asp-action="CreateTest" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> New Test
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Test Name</th>
                            <th>Duration</th>
                            <th>Questions</th>
                            <th>Departments</th>
                            <th>Question Bank</th>
                            <th>Status</th>
                            <th style="width: 220px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var test in Model)
                        {
                            <tr>
                                <td>@test.TestName</td>
                                <td>@test.DurationMinutes min</td>
                                <td>@test.NumberOfQuestions</td>
                                <td>
                                    <span class="text-muted">
                                        @string.Join(", ", test.TestDepartments.Select(td => td.Department?.DepartmentName ?? ""))
                                    </span>
                                </td>
                                <td>@test.QuestionBank.Name</td>
                                <td>
                                    @if (test.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-2 flex-wrap">
                                        <a asp-action="ViewTestQuestions" asp-route-testId="@test.Id" class="btn btn-outline-dark btn-sm" title="View">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a asp-action="EditTest" asp-route-id="@test.Id" class="btn btn-outline-dark btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        @if (!test.IsActive)
                                        {
                                            <form asp-action="ActivateTest" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@test.Id" />
                                                <button type="submit" class="btn btn-success btn-sm" title="Activate">
                                                    <i class="bi bi-check-circle"></i> Activate
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="DeactivateTest" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@test.Id" />
                                                <button type="submit" class="btn btn-warning btn-sm" title="Deactivate">
                                                    <i class="bi bi-x-circle"></i> Deactivate
                                                </button>
                                            </form>
                                        }
                                        <form asp-action="DeleteTest" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@test.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm" title="Delete"
                                                    onclick="return confirm('Are you sure you want to delete this test? This action cannot be undone.')">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>