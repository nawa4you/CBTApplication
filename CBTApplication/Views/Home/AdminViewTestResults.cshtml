@model CBTApplication.Models.TestResultViewModel
@{
    ViewData["Title"] = $"Results for: {Model.StudentName}";
}

<div class="container mx-auto mt-8 p-4 md:p-8 max-w-4xl">
    <div class="bg-white rounded-xl shadow-2xl overflow-hidden">
        <div class=" text-white p-6 text-center">
            <h1 class="text-3xl font-extrabold mb-2">Detailed Test Results</h1>
            <h2 class="text-xl font-semibold">@Model.TestName</h2>
            <p class="text-sm font-light mt-2">Student: @Model.StudentName</p>
        </div>

        <div class="p-6 md:p-8">
            <div class="bg-gray-100 p-6 rounded-lg text-center mb-6 shadow-inner">
                <p class="text-xl text-gray-700 font-medium">Final Score</p>
                <p class="text-5xl font-bold text-indigo-700 mt-2">
                    @Model.Score / @Model.NumberOfQuestions
                </p>
            </div>

            @if (Model.Questions.Any())
            {
                @for (int i = 0; i < Model.Questions.Count; i++)
                {
                    var question = Model.Questions[i];

                    var isCorrect = question.IsCorrect;

                    var studentAnswerd = question.SelectedOption;


                    <div class="mb-8 p-6 border-2  rounded-lg shadow-md transition-all duration-300 hover:shadow-lg">
                        <div class="flex justify-between items-center mb-4">
                            <h3 class="text-lg font-bold text-gray-800">
                                Question @(i + 1)
                            </h3>
                            @if(studentAnswerd != null)
                            {
                                
                            @if (isCorrect)
                            {
                                <span class="btn-sm btn-success px-3 py-1 rounded-pill uppercase">Correct</span>
                            }
                            else
                            {
                                <span class="btn-sm btn-danger px-3 py-1 rounded-pill">Incorrect</span>
                                }
                            } else
                            {
                            {
                                <span class="btn-sm btn-dark px-3 py-1 rounded-pill">No Answer</span>
                                }
                                
                            }
                        </div>
                        <p class="text-gray-700 mb-4">@question.QuestionText</p>

                        <div class="space-y-2">
                            @{
                                var options = new Dictionary<string, string>
                                {
                                    { "A", question.OptionA },
                                    { "B", question.OptionB },
                                    { "C", question.OptionC },
                                    { "D", question.OptionD }
                                };
                            }
                            @foreach (var option in options)
                            {
                                var optionClass = "bg-gray-100";
                                var isSelected = option.Key == question.SelectedOption;
                                var Correct = option.Key == question.CorrectOption;

                                if (Correct)
                                {
                                    optionClass = "bg-success bg-opacity-25";
                                }
                                else if (isSelected && !Correct)
                                {
                                    optionClass = "bg-danger bg-opacity-25";
                                }

                                <div class="p-3 rounded-lg @optionClass d-flex align-items-center justify-content-between mb-1">
                                    <div>
                                        <span class="fw-bold me-2">@option.Key.</span> @option.Value
                                    </div>
                                    <div>
                                        @if ( Correct)
                                        {
                                            <i class="bi bi-check-circle-fill text-success fs-5" title="Correct"></i>
                                        }
                                        else if (isSelected && !Correct)
                                        {
                                            <i class="bi bi-x-circle-fill text-danger fs-5" title="Incorrect"></i>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                            
                    </div>
                    <br />
                    <br />
                }
            }
            else
            {
                <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4" role="alert">
                    <p class="font-bold">No Questions Found</p>
                    <p>There was an issue loading the questions for this test attempt.</p>
                </div>
            }

            <div class="mt-8 text-center">
                <a asp-action="AdminDashboard" class="inline-block bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-3 px-6 rounded-lg transition ease-in-out duration-150 text-sm shadow-md">
                    Return to Admin Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
