@model CBTApplication.Models.TestWithQuestionsViewModel

@{
    ViewData["Title"] = $"Manage Questions for {Model.TestName}";
}

<div class="container mx-auto mt-8 p-8 bg-white rounded-xl shadow-2xl max-w-4xl">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-extrabold text-gray-900">@ViewData["Title"]</h1>
        <a asp-action="ManageTests" class="px-4 py-2 text-sm font-semibold text-gray-700 bg-gray-200 rounded-md hover:bg-gray-300 transition">
            &larr; Back to Tests
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">@TempData["SuccessMessage"]</span>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">@TempData["ErrorMessage"]</span>
        </div>
    }

    <!-- Form for adding a new question, now correctly bound to Model.NewQuestion -->
    <div class="p-6 bg-gray-50 rounded-lg border border-gray-200 mb-8">
        <h2 class="text-xl font-bold text-gray-800 mb-4">Add a New Question</h2>
        <form asp-action="AddQuestion" method="post" class="space-y-4">
            <input type="hidden" name="TestId" value="@Model.Id" />
            <div asp-validation-summary="ModelOnly" class="text-red-500 font-medium"></div>

            <div>
                <label asp-for="NewQuestion.QuestionText" class="block text-sm font-medium text-gray-700">Question Text</label>
                <textarea asp-for="NewQuestion.QuestionText" rows="3" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                <span asp-validation-for="NewQuestion.QuestionText" class="mt-1 text-sm text-red-500"></span>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="NewQuestion.OptionA" class="block text-sm font-medium text-gray-700">Option A</label>
                    <input asp-for="NewQuestion.OptionA" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="NewQuestion.OptionA" class="mt-1 text-sm text-red-500"></span>
                </div>
                <div>
                    <label asp-for="NewQuestion.OptionB" class="block text-sm font-medium text-gray-700">Option B</label>
                    <input asp-for="NewQuestion.OptionB" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="NewQuestion.OptionB" class="mt-1 text-sm text-red-500"></span>
                </div>
                <div>
                    <label asp-for="NewQuestion.OptionC" class="block text-sm font-medium text-gray-700">Option C</label>
                    <input asp-for="NewQuestion.OptionC" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="NewQuestion.OptionC" class="mt-1 text-sm text-red-500"></span>
                </div>
                <div>
                    <label asp-for="NewQuestion.OptionD" class="block text-sm font-medium text-gray-700">Option D</label>
                    <input asp-for="NewQuestion.OptionD" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="NewQuestion.OptionD" class="mt-1 text-sm text-red-500"></span>
                </div>
            </div>
            <div>
                <label asp-for="NewQuestion.CorrectOption" class="block text-sm font-medium text-gray-700">Correct Option (A, B, C, D)</label>
                <input asp-for="NewQuestion.CorrectOption" maxlength="1" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="NewQuestion.CorrectOption" class="mt-1 text-sm text-red-500"></span>
            </div>

            <div class="flex justify-end mt-4">
                <button type="submit" class="px-6 py-2 bg-green-500 text-white font-bold rounded-lg shadow-md hover:bg-green-600 transition-colors focus:outline-none">
                    Add Question
                </button>
            </div>
        </form>
    </div>

    <!-- List of existing questions -->
    <div class="space-y-4">
        <h2 class="text-2xl font-bold text-gray-800">Existing Questions (@Model.Questions.Count)</h2>
        @if (Model.Questions.Any())
        {
            @foreach (var question in Model.Questions.OrderBy(q => q.Id))
            {
                <div class="bg-gray-100 p-6 rounded-lg shadow-inner flex justify-between items-start">
                    <div>
                        <p class="font-semibold text-lg text-gray-900 mb-2">@question.QuestionText</p>
                        <ul class="list-disc list-inside space-y-1 text-gray-700">
                            <li>A. @question.OptionA</li>
                            <li>B. @question.OptionB</li>
                            <li>C. @question.OptionC</li>
                            <li>D. @question.OptionD</li>
                        </ul>
                        <p class="mt-2 font-bold text-green-600">Correct Answer: @question.CorrectOption</p>
                    </div>
                    <form asp-action="DeleteQuestion" method="post" onsubmit="return confirm('Are you sure you want to delete this question?');">
                        <input type="hidden" name="questionId" value="@question.Id" />
                        <input type="hidden" name="testId" value="@Model.Id" />
                        <button type="submit" class="text-red-500 hover:text-red-700 transition">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1H9a1 1 0 00-1 1v3m3 0h6" />
                            </svg>
                        </button>
                    </form>
                </div>
            }
        }
        else
        {
            <p class="text-gray-600">This test has no questions yet. Use the form above to add one.</p>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
